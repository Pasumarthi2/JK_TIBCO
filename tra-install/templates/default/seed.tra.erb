#========================================================== 
# *** Common variables. Modify these only. ***
#========================================================== 
#
tibco.env.PSP=:
tibco.env.JVM_LIB_PATH=<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386/server/libjvm.so
tibco.env.TRA_HOME=<%= node['tra-install']['install']['tibco_install_dir'] %>/tra/<%= node['tra-install']['install']['tra_version'] %>
tibco.env.TPCL_HOME=<%= node['tra-install']['install']['tibco_install_dir'] %>/tpcl/<%= node['tra-install']['install']['tpcl_version'] %>
tibco.env.HOME_TIBCO=<%= node['tra-install']['install']['tibco_install_dir'] %>
tibco.env.TIB_JAVA_HOME=<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>
tibco.env.TRA_APPEND_VERSION=<%= node['tra-install']['install']['tra_version'] %>

#
# Specifies the initial Java heap size to allocate
java.heap.size.max 32M

#========================================================== 
# *** Do NOT modify beyond this line ***
#========================================================== 

tibco.env.PATH .:%TRA_HOME%/hotfix/bin:%TRA_HOME%/bin:%TPCL_HOME%/bin:%TIB_JAVA_HOME%/bin:%PATH%

tibco.env.LD_LIBRARY_PATH %TRA_HOME%/hotfix/lib:%TRA_HOME%/lib:%TPCL_HOME%/lib:<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386/client:<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386

tibco.env.SHLIB_PATH %TRA_HOME%/hotfix/lib:%TRA_HOME%/lib:%TPCL_HOME%/lib:<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386/client:<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386

tibco.env.LIBPATH %TRA_HOME%/hotfix/lib:%TRA_HOME%/lib:%TPCL_HOME%/lib:<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386/client:<%= node['tra-install']['install']['tibco_install_dir'] %>/tibcojre/<%= node['tra-install']['install']['tibcojre_version'] %>/lib/i386

tibco.env.DYLD_LIBRARY_PATH %TRA_HOME%/hotfix/lib:%TRA_HOME%/lib:%TPCL_HOME%/lib:%DYLD_LIBRARY_PATH%

#
# Specifies the JVM to be used to launch this application
java.library %JVM_LIB_PATH%

#
# Specifies the class to launch
java.start.class com.tibco.security.util.LFile

#
# Specifies the main function in invoke
java.start.method main


#
# Specifies the initial Java heap size to allocate
java.heap.size.max 32M

#
# Specifies the -Djava.ext.dirs flag
tibco.class.path.extended %TRA_HOME%/hotfix/lib:%TRA_HOME%/lib:%TPCL_HOME%/lib:%TPCL_HOME%/lib/entrust


#
# Specifies the remaining arguments to pass into the application
application.args "%HOME_TIBCO%"
